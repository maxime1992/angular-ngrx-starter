{
  "name": "angular-ngrx-starter",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "prod": "ng build --prod --e=prod --no-sourcemap",
    "prettier:ts:base": "yarn run prettier -- --parser typescript --single-quote --trailing-comma es5",
    "prettier:ts:check": "yarn run prettier:ts:base -- -l \"./{e2e,src}/**/*.ts\"",
    "prettier:ts:write": "yarn run prettier:ts:base -- --write \"./{e2e,src}/**/*.ts\"",
    "prettier:scss:base": "yarn run prettier -- --parser postcss",
    "prettier:scss:check": "yarn run prettier:scss:base -- -l \"./{e2e,src}/**/*.scss\"",
    "prettier:scss:write": "yarn run prettier:scss:base -- --write \"./{e2e,src}/**/*.scss\"",
    "prettier:check": "yarn run prettier:ts:check && yarn run prettier:scss:check",
    "prettier:write": "yarn run prettier:ts:write && yarn run prettier:scss:write",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "yarn run prettier:ts:base -- -l"
      ],
      "*.scss": [
        "yarn run prettier:scss:base -- -l"
      ]
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "4.1.3",
    "@angular/common": "4.1.3",
    "@angular/compiler": "4.1.3",
    "@angular/core": "4.1.3",
    "@angular/flex-layout": "2.0.0-beta.8",
    "@angular/forms": "4.1.3",
    "@angular/http": "4.1.3",
    "@angular/material": "2.0.0-beta.6",
    "@angular/platform-browser": "4.1.3",
    "@angular/platform-browser-dynamic": "4.1.3",
    "@angular/router": "4.1.3",
    "@ngrx/core": "1.2.0",
    "@ngrx/effects": "2.0.3",
    "@ngrx/store": "2.2.2",
    "@ngrx/store-devtools": "3.2.4",
    "angular2-prettyjson": "2.0.5",
    "core-js": "2.4.1",
    "hammerjs": "2.0.8",
    "material-design-icons-iconfont": "3.0.3",
    "ng2-translate": "5.0.0",
    "ngrx-store-freeze": "0.1.9",
    "redux": "3.6.0",
    "redux-batched-actions": "0.2.0",
    "rxjs": "5.4.0",
    "zone.js": "0.8.12"
  },
  "devDependencies": {
    "@angular/cli": "1.1.1",
    "@angular/compiler-cli": "4.1.3",
    "@types/jasmine": "2.5.51",
    "@types/jest": "19.2.4",
    "@types/node": "7.0.29",
    "codelyzer": "3.0.0-beta.3",
    "husky": "0.13.4",
    "jasmine-core": "2.6.3",
    "jasmine-spec-reporter": "4.1.0",
    "jest": "20.0.4",
    "jest-preset-angular": "2.0.3",
    "lint-staged": "3.6.1",
    "prettier": "1.4.4",
    "protractor": "5.1.2",
    "ts-node": "3.0.6",
    "tslint": "4.5.1",
    "typescript": "2.3.4"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/src/setup-jest.ts",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.spec.ts",
      "!src/environment/**",
      "!src/**/*.mock.ts",
      "!src/mocks/**",
      "!src/**/*.d.ts"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/environment",
      "<rootDir>/src/mocks"
    ]
  }
}
